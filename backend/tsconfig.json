{
  "compilerOptions": {

    "target": "es2016",                                 
    "rootDir": "./src",   
    "module": "commonjs",                         
    "typeRoots": ["./node_modules/@types", "./src/types/index.d.ts"],                                   
    "outDir": "./dist",                                   
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "moduleResolution": "node",    
    "resolveJsonModule": true,                          
  },
  
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
   "exclude": ["node_modules"],
}